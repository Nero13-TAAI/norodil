# WhatsApp AI Automation - Environment Variables
# Copy this file to .env and fill in your actual credentials

# ==================== WHATSAPP API ====================

# Choose your WhatsApp provider: twilio, meta, or 360dialog
WHATSAPP_API_PROVIDER=twilio

# --- Twilio Settings (if using Twilio) ---
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+905438247016

# --- Meta/Facebook Settings (if using Meta WhatsApp Business API) ---
WHATSAPP_API_KEY=your_meta_api_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_PHONE_NUMBER=+905438247016

# --- 360Dialog Settings (if using 360Dialog) ---
# WHATSAPP_API_KEY=your_360dialog_api_key_here

# ==================== AI API ====================

# Choose AI provider: openai or anthropic
AI_PROVIDER=openai

# OpenAI Settings
OPENAI_API_KEY=sk-your-openai-api-key-here
AI_MODEL=gpt-4o-mini

# Anthropic Settings (alternative to OpenAI)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# AI_MODEL=claude-3-sonnet-20240229

# ==================== SERVER SETTINGS ====================

# Flask server configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# Webhook verification token (set your own secure token)
WEBHOOK_VERIFY_TOKEN=norodil_secure_token_2024_change_this

# ==================== AUTOMATION SETTINGS ====================

# Response delay in seconds (300 = 5 minutes)
RESPONSE_DELAY=300

# Maximum AI responses per conversation before requiring human
MAX_AI_RESPONSES=3

# Respond immediately outside business hours
IMMEDIATE_OUTSIDE_HOURS=True

# ==================== DATABASE ====================

# Database path (relative to project root)
DATABASE_PATH=data/conversations.db

# ==================== LOGGING ====================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
LOG_FILE=logs/whatsapp_ai.log

# ==================== RATE LIMITING ====================

# Maximum messages per minute
MAX_MESSAGES_PER_MINUTE=10

# ==================== NOTES ====================

# IMPORTANT:
# 1. Never commit this file with real credentials to git
# 2. Keep this file secure and private
# 3. The .gitignore file should include .env to prevent accidental commits
# 4. For production, consider using environment variables or secrets management
